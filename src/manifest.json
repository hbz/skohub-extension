{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "0.0.1",
  "default_locale": "en",

  "description": "__MSG_extensionDescription__",

  "homepage_url": "https://github.com/hbz/skohub-extension",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "256": "icons/icon256.png"
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/icon48.png",
    "default_title": "__MSG_extensionName__"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "web_accessible_resources": ["src/page.js"],

  "permissions": [
    "activeTab"
  ]
}